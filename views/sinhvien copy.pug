doctype html
html
    head
        title= title
        link(rel='stylesheet' href='/stylesheets/style.css')
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    body

        h1 Sinh Viên


        table(border=1 cellpadding=10)
            thead
                tr
                    th Stt
                    th Họ và Tên
                    th Mã QR
            tbody
                each sv, index in sinhviens
                    tr
                        td= index + 1
                        td= sv.fullName
                        td
                            a(href='/sinhvien/qr?id=' + sv._id) Xem
